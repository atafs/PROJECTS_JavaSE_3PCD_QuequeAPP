package com.iscte.queque._2concurrency.lock.synchronized_._vSync_1variable;

public class VariableSyncMain {
	
	//ATTRIBUTES
	private int count;
	private final int MAX = 10000;
	
	//CONSTRUCTOR
	public VariableSyncMain() {
		this.count = 0;
	}
	
	//GETTER
	public int getCount() {
		return count;
	}

	//MAIN
	public static void main(String[] args) {
		//INSTANTIATE
		VariableSyncMain variableSync = new VariableSyncMain();
		
		//ANNONYMOUS CLASS
		Thread t1 = new Thread(new Runnable() {
			
			@Override
			public void run() {
				//LOOP
				for (int i = 0; i < variableSync.MAX; i++) {
					variableSync.incount();
				}
				
			}
		});
		
		//ANNONYMOUS CLASS
		Thread t2 = new Thread(new Runnable() {
			
			@Override
			public void run() {
				//LOOP
				for (int i = 0; i < variableSync.MAX; i++) {
					variableSync.incount();
				}
				
			}
		});
	}
	
	



}
