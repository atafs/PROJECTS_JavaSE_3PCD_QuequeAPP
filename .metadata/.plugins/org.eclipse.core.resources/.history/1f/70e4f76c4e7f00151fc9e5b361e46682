package com.iscte.queque.client.locale;

import java.util.Locale;
import java.util.ResourceBundle;

public class BundleProperties {
	
	//ATTRIBUTES
	private ResourceBundle bundle1;

	//CONSTRUCTOR
	public BundleProperties() {
		bundle1 = ResourceBundle.getBundle("./locale/bundle.properties");
	}
	
	//TOSTRING
	private String getString(String string) {
		return bundle1.toString();
	}
	
	public static void main(String[] args) throws Exception {

		//INSTANTIATE
		BundleProperties bundle1 = new BundleProperties();
		displayValues(bundle1);



	}

	public static void displayValues(BundleProperties bundle) {
		System.out.println("hello message:" + bundle.getString("hello"));
		System.out.println();
	}



}
